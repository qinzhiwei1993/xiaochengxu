/* pages/welcome/welcome.wxss */
page{
  background:#b3d4db;
}
.container{
  display: flex;  
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold; 
}
.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
}
.user-name{
  margin-top: 100rpx;
}
.moto-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  border-radius: 6rpx;
  text-align: center;
  
  width: 200rpx;
  height: 80rpx;
}
.moto-container > .moto{
  line-height: 80rpx;
  font-size: 22rpx;
  color: #405f80;
}